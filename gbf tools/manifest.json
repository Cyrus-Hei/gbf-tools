{
    "manifest_version": 3,
    "name": "GBF Tracker",
    "description": "A simple tracker for GBF, WIP",
    "version": "0.1",
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      },
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "offscreen",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]

}